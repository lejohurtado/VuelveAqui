<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFEB3B"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:text="@string/vuelve_aqui"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/idName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Nombres y Apellidos"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:outlineSpotShadowColor="@color/black" />

        <EditText
            android:id="@+id/idPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Teléfono"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/idDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Fecha de nacimiento"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/idMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Correo"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/idPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Contraseña"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/idPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Confirmar contraseña"
            android:ems="10"
            android:inputType="textPassword"
            app:suffixText="lejo" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>